{
  "ConnectionStrings": {
 "DefaultConnection": "DataSource=app.db"
  },

  "Serilog": {
    "restrictedToMinimumLevel": null,
    "WriteTo": [
      {
        "Name": "Console",
        "restrictedToMinimumLevel": "Information"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Properties": {
      "Application": "Clean Architecture"
    }
  },
  "AllowedHosts": "*"
}
